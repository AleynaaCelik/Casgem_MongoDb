@model List<Casgem_MongoDb_Consume.DTOs.Estate>
@{
    ViewData["Title"] = "Index";
    Layout = null;
    var userName = ViewData["UserName"] as string;
    int count = 0;
}

<!--
Author: W3layouts
Author URL: http://w3layouts.com
